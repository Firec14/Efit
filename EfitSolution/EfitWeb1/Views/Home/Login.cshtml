@model EfitWeb1.Models.UserLogin

@{
     ViewBag.Title = "Login";
     Layout = "~/Views/Shared/_Layout.cshtml"; // ”казываем основной макет
}

<div class="container mt-5">
     <div class="row justify-content-center">
          <div class="col-md-6">
               <div class="card">
                    <div class="card-header">
                         <ul class="nav nav-tabs card-header-tabs">
                              <li class="nav-item">
                                   <a class="nav-link active" href="@Url.Action("Index", "Login")">Login</a>
                              </li>
                              <li class="nav-item">
                                   <a class="nav-link" href="@Url.Action("Index", "Register")">Register</a>
                              </li>
                         </ul>
                    </div>
                    <div class="card-body">
                         @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                         {
                              @Html.AntiForgeryToken()
                              <div class="form-group">
                                   @Html.LabelFor(m => m.Credential)
                                   @Html.TextBoxFor(m => m.Credential, new { @class = "form-control" })
                                   @Html.ValidationMessageFor(m => m.Credential, "", new { @class = "text-danger" })
                              </div>
                              <div class="form-group">
                                   @Html.LabelFor(m => m.Password)
                                   @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                   @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                              </div>
                              <div class="form-group">
                                   <input type="submit" value="Login" class="btn btn-primary btn-block" />
                              </div>
                         }
                         @if (ViewBag.ErrorMessage != null)
                         {
                              <div class="alert alert-danger">
                                   @ViewBag.ErrorMessage
                              </div>
                         }
                    </div>
               </div>
          </div>
     </div>
</div>
