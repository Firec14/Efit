@using System.Web.Mvc.Html
@model eUseControl.Domain.Entities.Contact.ContactTable

@{
     Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
     <meta name="description" content="" />
     <meta name="author" content="" />
     <title>Efit - Enjoy the movements</title>
     <!-- Favicon-->
     <link rel="icon" type="image/x-icon" href="~/Content/assets/icon.ico" />
     <!-- Font Awesome icons (free version)-->
     <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
     <!-- Google fonts-->
     <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
     <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
     <!-- Core theme CSS (includes Bootstrap)-->
     <link href="~/Content/css/styles.css" rel="stylesheet" />
     <style>
          .full-width-section {
               position: relative;
               width: 100%;
               height: 60vh;
               background-size: cover;
               background-position: center;
               display: flex;
               align-items: center;
               justify-content: center;
               text-align: center;
               color: white;
          }

               .full-width-section .container {
                    position: relative;
                    z-index: 2;
               }
     </style>
</head>
<body id="page-top">
     <!-- Navigation-->
     <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
          <div class="container">
               <a class="navbar-brand" href="#page-top"><img src="~/Content/assets/img/logo1.svg" alt="..." /></a>
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
               </button>
               <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                         <li class="nav-item"><a class="nav-link" href="#services">Trainer Services</a></li>
                         <li class="nav-item"><a class="nav-link" href="#courses">Preinstalled Courses</a></li>
                         <li class="nav-item">@Html.ActionLink("TrainerPage", "TrainerPage", "Trainer", new { area = "" }, new { @class = "nav-link" })</li>
                         <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                         <li class="nav-item"><a class="nav-link" href="#team">Team</a></li>
                         <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                         <li class="nav-item">@Html.ActionLink("Login", "Login", "Login", new { area = "" }, new { @class = "nav-link" })</li>
                         <li class="nav-item">@Html.ActionLink("Register", "Register", "Register", new { area = "" }, new { @class = "nav-link" })</li>
                         
                    </ul>
               </div>
          </div>
     </nav>
     <!-- Masthead-->
     <header class="masthead">
          <div class="container">
               <div class="masthead-subheading">Welcome To Efit!</div>
               <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
               <a class="btn btn-primary btn-xl text-uppercase" href="#services">Tell Me More</a>
          </div>
     </header>
     <!-- Spacer -->
     <div style="height: 5px;"></div>
     <!-- Services-->
     <section class="full-width-section" id="services" style="background: url('@Url.Content("~/Content/assets/img/services.jpg")') no-repeat center center; background-size: cover;">
          <div class="container">
               <div class="text-center">
                    <h2 class="section-heading text-uppercase">Trainer Services</h2>
                    <a class="btn btn-primary btn-xl text-uppercase" href="/Services/Services">Explore</a>
               </div>
          </div>
     </section>
     <!-- Spacer -->
     <div style="height: 5px;"></div>
     <!-- Courses-->
     <section class="full-width-section" id="courses" style="background: url('@Url.Content("~/Content/assets/img/courses.jpg")') no-repeat center center; background-size: cover;">
          <div class="container">
               <h2 class="section-heading text-uppercase">Preinstalled Courses</h2>
               <a class="btn btn-primary btn-xl text-uppercase" href="/Courses/Courses">Explore</a>
          </div>
     </section>
     <!-- About-->
     <section class="page-section" id="about">
          <div class="container">
               <div class="text-center">
                    <h2 class="section-heading text-uppercase">About Us</h2>
                    <h3 class="section-subheading text-muted">Explore our journey to provide high quality fitness classes.</h3>
               </div>
               <ul class="timeline">
                    <li>
                         <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/Content/assets/img/about/1.jpg" alt="..." /></div>
                         <div class="timeline-panel">
                              <div class="timeline-heading">
                                   <h4>2024</h4>
                                   <h4 class="subheading">Launch of the Platform</h4>
                              </div>
                              <div class="timeline-body"><p class="text-muted">In 2024, we launched our platform to offer fitness classes tailored to the needs of every user, whether beginner or professional.</p></div>
                         </div>
                    </li>
                    <li class="timeline-inverted">
                         <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/Content/assets/img/about/2.jpg" alt="..." /></div>
                         <div class="timeline-panel">
                              <div class="timeline-heading">
                                   <h4>February 2024</h4>
                                   <h4 class="subheading">Introduction of Fitness Courses</h4>
                              </div>
                              <div class="timeline-body"><p class="text-muted">In February 2024, we introduced the first fitness classes specifically designed to help users improve their health and fitness.</p></div>
                         </div>
                    </li>
                    <li>
                         <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/Content/assets/img/about/3.jpg" alt="..." /></div>
                         <div class="timeline-panel">
                              <div class="timeline-heading">
                                   <h4>March 2024</h4>
                                   <h4 class="subheading">Expanding Course Ranges</h4>
                              </div>
                              <div class="timeline-body"><p class="text-muted">In March 2024, we expanded our range of courses, now offering options for both beginners and PRO users.</p></div>
                         </div>
                    </li>
                    <li class="timeline-inverted">
                         <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/Content/assets/img/about/4.jpg" alt="..." /></div>
                         <div class="timeline-panel">
                              <div class="timeline-heading">
                                   <h4>April 2024</h4>
                                   <h4 class="subheading">Launch of Beginner and PRO Subcategories</h4>
                              </div>
                              <div class="timeline-body"><p class="text-muted">In April 2024, we introduced specific subcategories for beginners and PRO users, with two options for beginners and three for PRO users.</p></div>
                         </div>
                    </li>
               </ul>
          </div>
     </section>

     <!-- Team-->
     <section class="page-section bg-light" id="team">
          <div class="container">
               <div class="text-center">
                    <h2 class="section-heading text-uppercase">Our Amazing Team</h2>
                    <div style="height: 20px;"></div>
               </div>
               <div class="row">
                    <div class="col-lg-4">
                         <div class="team-member">
                              <img class="mx-auto rounded-circle" src="~/Content/assets/img/team/1.jpg" alt="..." />
                              <h4>Parveen Anand</h4>
                              <p class="text-muted">Head of Fitness Content</p>
                         </div>
                    </div>
                    <div class="col-lg-4">
                         <div class="team-member">
                              <img class="mx-auto rounded-circle" src="~/Content/assets/img/team/2.jpg" alt="..." />
                              <h4>Diana Petersen</h4>
                              <p class="text-muted">Community Manager</p>
                         </div>
                    </div>
                    <div class="col-lg-4">
                         <div class="team-member">
                              <img class="mx-auto rounded-circle" src="~/Content/assets/img/team/3.jpg" alt="..." />
                              <h4>Larry Parker</h4>
                              <p class="text-muted">Chief Technology Officer</p>
                         </div>
                    </div>
               </div>
               <div class="row">
                    <div class="col-lg-8 mx-auto text-center"><p class="large text-muted">Our dedicated team is here to provide you with the best fitness classes. We strive to create engaging and effective content to help you achieve your goals.</p></div>
               </div>
          </div>
     </section>
     <!-- Contact-->
     <section class="page-section" id="contact">
          <div class="container">
               <div class="text-center">
                    <h2 class="section-heading text-uppercase">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
               </div>
               <form id="contactForm" action="@Url.Action("Submit", "Home")" method="post">
                    @Html.AntiForgeryToken() <!-- Add the anti-forgery token here -->

                    <div class="row align-items-stretch mb-5">
                         <div class="col-md-6">
                              <div class="form-group">
                                   @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                                   @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Name " } })
                                   @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                              </div>
                              <div class="form-group">
                                   @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                   @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Email" } })
                                   @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                              </div>
                              <div class="form-group mb-md-0">
                                   @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label" })
                                   @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Phone " } })
                                   @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                              </div>
                         </div>
                         <div class="col-md-6">
                              <div class="form-group form-group-textarea mb-md-0">
                                   @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label" })
                                   @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Your Message" })
                                   @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                              </div>
                         </div>
                    </div>
                    <div class="d-none" id="submitSuccessMessage">
                         <div class="text-center text-white mb-3">
                              <div class="fw-bolder">Form submission successful!</div>
                         </div>
                    </div>
                    <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                    <div class="text-center"><button class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit">Send Message</button></div>
               </form>

          </div>
     </section>
     <!-- Footer-->
     <footer class="footer py-4">
          <div class="container">
               <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start">Copyright &copy; Efit 2023</div>
                    <div class="col-lg-4 my-3 my-lg-0"> </div>
                    <div class="col-lg-4 text-lg-end">
                         <form action="@Url.Action("Logout", "Login")" method="post" class="d-inline">
                              @Html.AntiForgeryToken()
                              <button type="submit" class="btn btn-dark text-decoration-none">Logout</button>
                         </form>
                    </div>
               </div>
          </div>
     </footer>

     <!-- Bootstrap core JS-->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
     <!-- Core theme JS-->
     <script src="~/Content/js/scripts.js"></script>

     <script>
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                alert('@TempData["ErrorMessage"]');
            </text>
        }
     </script>

</body>
</html>
