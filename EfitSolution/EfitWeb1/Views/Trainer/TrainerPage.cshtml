@model IEnumerable<eUseControl.Domain.Entities.Product.ProductTable>

@{
     ViewBag.Title = "TrainerPage";
}

<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
     <div class="container">
          <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/assets/img/logo1.svg" alt="..." /></a>
     </div>
</nav>
<div class="container">
     <div class="text-center">
          <h1 class="section-heading text-uppercase">Trainer Page</h1>
     </div>
</div>
<div class="container">
     <div class="text-center">
          <h2 class="section-heading text-uppercase">Product List</h2>
     </div>
</div>
<p>
     @Html.ActionLink("Create New", "CreateProduct", "Trainer", null, new { @class = "nav-link" })
</p>

<table class="table">
     <thead>
          <tr>
               <th>@Html.DisplayNameFor(model => model.First().Name)</th>
               <th>@Html.DisplayNameFor(model => model.First().ProductCategory)</th>
               <th>@Html.DisplayNameFor(model => model.First().ProductPrice)</th>
               <th>@Html.DisplayNameFor(model => model.First().Level)</th>
               <th></th>
          </tr>
     </thead>
     <tbody>
          @foreach (var item in Model)
          {
               <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.Level)</td>
                    <td>
                         @Html.ActionLink("Edit", "EditProduct", "Trainer", new { id = item.ProductId }, null) |
                         @Html.ActionLink("Delete", "DeleteProduct", "Trainer", new { id = item.ProductId }, null)
                    </td>
               </tr>
          }

     </tbody>
</table>
