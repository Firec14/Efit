<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
     <meta name="description" content="" />
     <meta name="author" content="" />
     <title>Efit - Enjoy the movements</title>
     <!-- Favicon-->
     <link rel="icon" type="image/x-icon" href="~/Content/assets/icon.ico" />
     <!-- Font Awesome icons (free version)-->
     <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
     <!-- Google fonts-->
     <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
     <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
     <!-- Core theme CSS (includes Bootstrap)-->
     <link href="~/Content/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">

     @RenderBody()
     <!-- Footer-->
     <footer class="footer py-4">
          <div class="container">
               <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start">Copyright &copy; Efit 2023</div>
                    <div class="col-lg-4 my-3 my-lg-0"> </div>
                    <div class="col-lg-4 text-lg-end">
                         <form action="@Url.Action("Logout", "Login")" method="post" class="d-inline">
                              @Html.AntiForgeryToken()
                              <button type="submit" class="btn btn-dark text-decoration-none">Logout</button>
                         </form>
                    </div>
               </div>
          </div>
     </footer>

     <!-- Bootstrap core JS-->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
     <!-- Core theme JS-->
     <script src="~/Content/js/scripts.js"></script>

     <script>
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                alert('@TempData["ErrorMessage"]');
            </text>
        }
     </script>
</body>
</html>
